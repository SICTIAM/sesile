<table class="table tableau dtables">
    <thead>
    <tr>
        <th>Titre du classeur</th>
        <th>Date de cr√©ation</th>
        <th>Date limite de validation</th>
        <th>Type de classeur</th>
        <th>Intervention</th>
        <th>Statut actuel</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    {% for classeur in classeurs %}
        <tr class="classeur-row" data-id="{{ classeur.id }}">
            <td>{{ classeur.nom }}</td>
            <td>{% if classeur.creation %}{{ classeur.creation | date('d/m/Y') }}{% endif %}</td>
            <td>{% if classeur.validation %}{{ classeur.validation | date('d/m/Y') }}{% endif %}</td>
            <td>{{ classeur.type }}</td>
            <td>{{ classeur.validantName }}</td>
            <td class="statut">
                <span class="glyphicon statut_{{ classeur.status }}"></span>
            </td>
            <td class="boutons_action">
                <a href="{{ path("classeur_edit", {'id' : classeur.id }) }}">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                {% if classeur.isSupprimable(app.user.id) %}
                    <a href="{{ path("classeur_supprimer") }}">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<script type="text/javascript">
    $(".classeur-row").click(function (e) {
        document.location.href = Routing.generate('classeur_edit', { id: $(this).data("id") });
    });
</script>