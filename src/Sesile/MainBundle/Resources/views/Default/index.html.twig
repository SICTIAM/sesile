    <div class="col-md-10" id="content">
        <div id="header">
            {% block header %}
                {% if app.user != null %}
                    Bonjour {{ app.user.username }}<br>
                    <a href="{{ path("logout") }}">D&eacute;connexion</a>
                {% else %}
                    <a href="{{ path("login_check") }}">Connexion</a>
                {% endif %}
            {% endblock %}
        </div>
        <div id="lecontent">
            {% block content %}
                <div class="bloc_accueil">
